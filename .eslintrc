{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser" : true,
    "es6": true,
    "node": true
  },
  "rules": {
    "object-curly-spacing": [2, "always"],
    "arrow-parens": ["warn", "as-needed"],
    "no-var": 2,
    "no-console": "off",
    "no-process-env": "off"
  }
}